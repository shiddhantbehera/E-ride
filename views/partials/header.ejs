<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <script src="https://kit.fontawesome.com/08a4db571e.js" crossorigin="anonymous"></script>
    </head>
    <body>
    
    <div id="index-header" style="margin-top: 0px;">    
    <nav id="mainNavbar" class="navbar navbar-dark navbar-expand-md py-0 fixed-top"> 
        <div class="container">
            <div class="navbar-header" style="margin-top: 0px;">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="navbar-toggler-icon"><i class="fas fa-box-open"></i></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="/">E-RIDE</a>
            </div>
            <div id="navbar"  class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a href="/campgrounds" class="nav-link" style="color: red;">Home</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right" >
                <% if(!currentUser){ %>
                    <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login" class="nav-link" style="color: red;">Login</a></li>
                    <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register" class="nav-link" style="color: red;">Sign Up</a></li>
                <% } else { %>
                    <li><a href="#" class="nav-link" style="color: red;">Signed In As <%= currentUser.username %></a></li>
                    <li><a href="/logout" class="nav-link" style="color: red;">Logout</a></li>
                <% } %>
            </ul>
            </div>
        </div>
    </div>
    </nav>
</div>
    <div class="container">
        <% if(error && error.length > 0) { %>
        <div class="alert alert-danger"><p><%=error %></p></div>
        <% } %>
        
        <% if(success && success.length > 0) { %>
        <div class="alert alert-success"><p><%= success %></p></div>
        <% } %>
    </div>

